package com.ready.rain.entity.mib;

import java.awt.image.BufferedImage;


public class Character {
	
	public int x;
	public int y;
	public int xjoint1;
	public int yjoint1;
	public int xjoint2;
	public int yjoint2;
	public BufferedImage righttorso;
	public BufferedImage lefttorso;
	public BufferedImage rightarm;
	public BufferedImage leftarm;
	
	public Character (int x, int y,BufferedImage righttorso,BufferedImage lefttorso,BufferedImage rightarm,BufferedImage leftarm,int xjoint1,int yjoint1,int xjoint2,int yjoint2) {
		 
		this.righttorso = righttorso;
		this.lefttorso = lefttorso;
		this.rightarm = lefttorso;
		this.leftarm = lefttorso;
		this.xjoint1 = xjoint1;
		this.yjoint1 = yjoint1;
		this.xjoint2 = xjoint2;
		this.yjoint2 = yjoint2;
		this.x = x - righttorso.getWidth()/2;
		this.y = y + righttorso.getHeight()/2;
		 
		}
}
