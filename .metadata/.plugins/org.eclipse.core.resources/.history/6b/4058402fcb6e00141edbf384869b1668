package com.ready.rain.entity.mib;

import java.awt.image.BufferedImage;

import com.ready.rain.input.Keyboard;


public class Character extends Mob {
	public int xjoint1;
	public int yjoint1;
	public int xjoint2;
	public int yjoint2;
	public int xjoint3;
	public int yjoint3;
	public int xjoint4;
	public int yjoint4;
	public int xjoint5;
	public int yjoint5;
	public int xjoint6;
	public int yjoint6;
	public BufferedImage righttorso;
	public BufferedImage lefttorso;
	public BufferedImage rightarm;
	public BufferedImage leftarm;
	public BufferedImage rightleg;
	public BufferedImage leftleg;
	
	public Character (int x, int y,BufferedImage righttorso,BufferedImage lefttorso,BufferedImage rightarm,BufferedImage leftarm,BufferedImage rightleg, BufferedImage leftleg,int xjoint1,int yjoint1,int xjoint2,int yjoint2,int xjoint3,int yjoint3,int xjoint4,int yjoint4,int xjoint5,int yjoint5,int xjoint6,int yjoint6, int xjoint7,int yjoint7) {
		this.righttorso = righttorso;
		this.lefttorso = lefttorso;
		this.rightarm = rightarm;
		this.leftarm = leftarm;
		this.rightleg = rightleg;
		this.leftleg = leftleg;
		this.xjoint1 = xjoint1;
		this.yjoint1 = yjoint1 + righttorso.getHeight()/2;
		this.xjoint2 = xjoint2;
		this.yjoint2 = yjoint2;
		this.xjoint3 = xjoint3;
		this.yjoint3 = yjoint3 + righttorso.getHeight()/2;
		this.xjoint4 = xjoint4;
		this.yjoint4 = yjoint4;
		this.xjoint5 = xjoint5;
		this.yjoint5 = yjoint5 + righttorso.getHeight()/2;
		this.xjoint6 = xjoint6;
		this.yjoint6 = yjoint6;
		this.x = x - righttorso.getWidth()/2;
		this.y = y + righttorso.getHeight()/2;
		 
		}
	
}
